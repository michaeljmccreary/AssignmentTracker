<div class="form-wrapper">
  <div class="form-container">
    <div class="form-card">
      <%= form_with(model: classroom, local: true) do |form| %>
        <% if classroom.errors.any? %>
          <div class="alert alert-danger">
            <h6><%= pluralize(classroom.errors.count, "error") %> prohibited this classroom from being saved:</h6>
            <ul>
              <% classroom.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= form.label :name, "Classroom Name", class: "form-label" %>
          <%= form.text_field :name, class: "form-control", placeholder: "e.g., Math 101, History, Biology Lab" %>
        </div>

        <div class="d-flex gap-2">
          <%= form.submit class: "btn btn-primary" %>
          <%= link_to "Cancel", classrooms_path, class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
